@{
    ViewData["Title"] = "Customers";
    Layout = "_Layout";
}

@model List<Customer>

<h2>View, Edit, and Delete Customers</h2>

<a asp-controller="Admin" asp-action="NewCustomer"><h4>Create a New Customer</h4></a>

<table class="table table-bordered table-striped text-center" style="background-color: #FFEBC6;">
    <thead>
    <tr style="background-color: #FFD699;">
        <th style="padding: 10px;">Customer ID</th>
        <th style="padding: 10px;">First Name</th>
        <th style="padding: 10px;">Last Name</th>
        <th style="padding: 10px;">Birth Date</th>
        <th style="padding: 10px;">Country</th>
        <th style="padding: 10px;">Gender</th>
        <th style="padding: 10px;">Age</th>
        <th style="padding: 10px;">Email</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Customer c in Model)
    {
        <tr>
            <td style="padding: 10px;">@c.customer_ID</td>
            <td style="padding: 10px;">@c.first_name</td>
            <td style="padding: 10px;">@c.last_name</td>
            <td style="padding: 10px;">@c.birth_date.ToShortDateString()</td>
            <td style="padding: 10px;">@c.country_of_residence</td>
            <td style="padding: 10px;">@c.gender</td>
            <td style="padding: 10px;">@c.age</td>
            <td style="padding: 10px;">@c.email</td>
            <td class="col-md-4 text-center">
                <a class="btn btn-primary btn-block" asp-controller="Admin" asp-action="EditCustomer" asp-route-id="@c.customer_ID">Edit</a> <!-- Use "btn-block" to make buttons fill the width -->
                <br/><br/>
                <a class="btn btn-danger btn-block" asp-controller="Admin" asp-action="DeleteCustomer" asp-route-id="@c.customer_ID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>