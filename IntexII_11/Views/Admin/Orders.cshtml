@{
    ViewData["Title"] = "Orders";
    Layout = "_Layout";
}

@model List<Order>
<table class="table table-bordered table-striped text-center" style="background-color: #FFEBC6;">
    <thead>
        <tr style="background-color: #FFD699;">
            <th style="padding: 10px;">Order ID</th>
            <th style="padding: 10px;">Customer ID</th>
            <th style="padding: 10px;">Date Ordered</th>
            <th style="padding: 10px;">Amount</th>
            <th style="padding: 10px;">Billing Country</th>
            <th style="padding: 10px;">Shipping Country</th>
            
            <th>Details</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Order o in Model)
        {
            <tr style="@(o.predicted_fraud ? "background-color: red;" : "")">
                <td style="padding: 10px;">@o.order_ID</td>
                <td style="padding: 10px;">@o.customer_ID</td>
                <td style="padding: 10px;">@o.date.ToShortDateString()</td>
                <td style="padding: 10px;">$@o.amount.ToString("0.00")</td>
                <td style="padding: 10px;">@o.country_of_transaction</td>
                <td style="padding: 10px;">@o.shipping_address</td>
                <td><a href="/Admin/OrderDetail/@o.order_ID" class="btn btn-secondary mt-auto">View Ordered Products</a></td>
                <td>
                    @(o.predicted_fraud ? "Fraud Predicted" : "")
                </td>
            </tr>
        }
    </tbody>
</table>
