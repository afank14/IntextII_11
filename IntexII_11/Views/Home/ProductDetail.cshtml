@model IntexII_11.Models.Product
@{
    ViewData["Title"] = "Product Detail";
}
@section Scripts {
    <script>
        function addToCart(product) {
            var cart = JSON.parse(sessionStorage.getItem('cart')) || [];
            cart.push(product);
            sessionStorage.setItem('cart', JSON.stringify(cart));
            var button = document.getElementById("addToBagButton");
            button.innerHTML = '<i class="fas fa-check"></i> Item Added';
            button.classList.remove("btn-secondary");
            button.classList.add("btn-success");
        }
    </script>
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<div class="container mt-5">
    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.img_link" class="img-fluid" alt="@Model.name" />
            </div>
            <div class="col-md-6">
                <h2>@Model.name</h2>
                <p><strong>Year:</strong> @Model.year</p>
                <p><strong>Number of Parts:</strong> @Model.num_parts</p>
                <p><strong>Price:</strong> $@Model.price</p>
                <p><strong>Primary Color:</strong> @Model.primary_color</p>
                <p><strong>Secondary Color:</strong> @Model.secondary_color</p>
                <p><strong>Description:</strong></p>
                <p>@Model.description</p>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Continue Shopping</a>
                    </div>
                    <div class="col-md-6 text-end">
                        <button id="addToBagButton" class="btn btn-secondary" onclick="addToCart(@Newtonsoft.Json.JsonConvert.SerializeObject(Model))">Add to Bag</button>
                        <br />
                        <a href="@Url.Action("MyBag", "Home")" class="btn btn-secondary">View Bag</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Recommendations -->
        <div class="row">
            <h3 class="text-center">You may also like:</h3>
        </div>
        <div class="row">
            <div class="d-flex overflow-auto">
                @foreach (Product p in ViewBag.Recommendations)
                {
                    <a href="/ProductDetail/@p.product_ID" class="col-3">
                        <!-- Use Bootstrap's grid system to set the width -->
                        <div class="card m-1 p-1" style="height: 100%;">
                            <!-- Set a fixed height -->
                            <div class="d-flex flex-column justify-content-between">
                                <div>
                                    <div class="text-center">
                                        <!-- Center the image -->
                                        <img src="@p.img_link" width="125" height="125" class="mb-2 mx-auto d-block" /> <!-- mx-auto and d-block center the image -->
                                    </div>
                                    <ul class="list-unstyled mb-0 text-center">
                                        <li><span>@p.name</span></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">Product not found.</div>
    }
</div>