@{
    ViewData["Title"] = "Home Page";
}
@model List<Product>

<div class="text-center">
    <h2>Welcome to Aurora Bricks, we're happy to have you, friend! Happy bricking!</h2>
    <div class="row">
        <div class="col-2">
            <div class="text-left mt-3">
                <div class="btn-group" role="group" aria-label="Display Options">
                    <button type="button" class="btn btn-secondary btn-sm">5 results</button>
                    <button type="button" class="btn btn-secondary btn-sm">10 results</button>
                    <button type="button" class="btn btn-secondary btn-sm">20 results</button>
                </div>
            </div>
        </div>
        <div class="col-10">
            <div class="d-flex flex-wrap">
                @foreach (Product p in Model)
                {
                    <partial name="ProductSummary" model="p"></partial>
                }
            </div>
        </div>
    </div>
</div>



